{
  "compilerOptions": {
    "moduleResolution": "node",
    "declarationDir": "dist",
    "declaration": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "removeComments": true,
    "pretty": true,
    "strict": true,
    "outDir": "./dist/",
    "rootDir": "./src",
    // "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "noFallthroughCasesInSwitch": true,

    /*  "paths": {
      "*": ["node_modules/*"]
    }, */
    "importHelpers": true
  },
  "include": ["*", "./src/*.ts"],
  "exclude": []
  //"exclude": ["node_modules", "**/node_modules/*"]
  //"include": ["src/**/*.ts"]
}
