{
    "compilerOptions": {
        "lib": ["DOM"],
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declarationDir": "dist",
        "declaration": true,
        "noUnusedLocals": true,
        "module": "esnext",
        "target": "esnext",
        "jsx": "preserve",
        "removeComments": true,
        "pretty": true,
        "strict": true,
        "outDir": "./dist/",
        "rootDir": "./src",
        "allowJs": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "noFallthroughCasesInSwitch": true,

        "checkJs": true,
        "importHelpers": true
    },
    "include": ["*.ts", "./src/*.ts"],
    "exclude": []
}
